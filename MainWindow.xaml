<Window x:Class="Система_догляду_за_тваринами.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система догляду за тваринами" Height="300" Width="250"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <StackPanel>
            <Button Content="Реєстрація тварини" Click="RegisterAnimal_Click" Margin="40" Height="50" Width="140"/>
            <Button Content="Список тварин" Click="ShowAnimalList_Click" Margin="-30" Height="50" Width="140"/>
            <Button Content="Вихід з програми" Click="ExitApplication_Click" Margin="50" Height="30" Width="115"/>
        </StackPanel>
    </Grid>
</Window>
